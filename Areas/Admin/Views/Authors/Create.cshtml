@model TbAuthors
@{
    TempData["Title"] = "Add Author";
}


<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Add Author</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-controller="Authors" asp-action="Save" enctype="multipart/form-data">
                    <div class="mb-5">
                       
                        <div class="form-floating mb-2">
                            <input  type="text" asp-for="AuthorName" class="form-control" placeholder="Name" asp-for="AuthorName" />
                            <label> Author Name</label>
                            <span asp-validation-for="AuthorName" class="text-danger"></span>
                        </div>
                        

                    </div>

                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check2"></i>
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}